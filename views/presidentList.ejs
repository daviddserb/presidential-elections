<!DOCTYPE html>
<html>
    <head>
        <link rel='stylesheet' href='/stylesheets/style.css' />
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    </head>
    <body>
            <section class="vh-100 bg-image" style="background-image: url('https://mdbcdn.b-cdn.net/img/Photos/new-templates/search-box/img4.webp');">
                <div class="mask d-flex align-items-center h-100 gradient-custom-3">
                    <div class="container h-100">
                        <div class="row d-flex justify-content-center align-items-center h-100">
                            <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                                <% if (popUpMessage != " ") { %>
                                    <div class="alert alert-danger">
                                        <%= popUpMessage %>
                                    </div>
                                <% } else { %>
                                <div class="card" style="border-radius: 15px;">

                                    <div class="card-body p-5">
                                        <% for (let i = 0; i < candidates.length; ++i) { %>
                                            <ul>
                                                <%= i + 1 %>. <%= candidates[i].candidate %>
                                                <br>
                            
                                                <% for (let j = 0; j < electeds.length; ++j) { %>
                                                    <% if (candidates[i].candidate == electeds[j].elected) { %>
                                                        votes: <%= electeds[j].votes %>
                                                        <% break %>
                                                    <% } else if (j == electeds.length - 1) { %>
                                                        votes: 0
                                                    <% } %>
                                                <% } %>
                                                <form action="/users/user/<%= candidates[i].candidate %>/vote" method="POST">
                                                    <input type="submit" class="btn btn-success btn-block gradient-custom-4 text-body" value="Vote">
                                                </form>
                                            </ul>
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        <% } %>
        <br>
    </body>
</html>