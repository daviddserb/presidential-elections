<!DOCTYPE html>
<html>
<head>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body>
    <section class="vh-100 bg-image" style="background-image: url('https://mdbcdn.b-cdn.net/img/Photos/new-templates/search-box/img4.webp');">
        <div class="mask d-flex align-items-center h-100 gradient-custom-3">
            <div class="container h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                        <% if (typeof message !== 'undefined') { %>
                            <% if (message == 'Presidency election started.') { %>
                                <div class="alert alert-success">
                                    <%= message %>
                                </div>
                            <% } else { %>
                                <div class="alert alert-danger">
                                    <%= message %>
                                </div>
                            <% } %>
                        <% } %>
                        <div class="card" style="border-radius: 15px;">
                            <h2 class="text-center mb-3"> <%= loggedInAdminInfo.name %> </h2>
                            <hr>
                            <div class="card-body p-5">
                                <form action="/users/president/list" method="GET">
                                    <div class="d-flex justify-content-center">
                                        <input type="submit" class="btn btn-success btn-block btn-lg gradient-custom-4 text-body" value="Presidential candidates">
                                    </div>
                                </form>
                                <hr>
                                <div class="container">
                                    <h4 class="text-center mb-5">Create election</h4>
                                    <div>
                                        <form action="/users/president/elections" method="POST">
                                            <div>
                                                <label for="start">Start Date</label>
                                                <input type="datetime-local" class="form-control" id="start" name="startDateElection" required style="width: 220px;">
                                            </div>
                                            <div>
                                                <label for="finish">End Date</label>
                                                <input type="datetime-local" class="form-control" id="finish" name="finishDateElection" required style="width: 220px;">
                                            </div>
                                            <div style="margin-top: 10px;">
                                                <input type="submit" class="btn btn-success gradient-custom-4 text-body mx-auto" value="Save">
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>