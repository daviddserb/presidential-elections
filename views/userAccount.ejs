<!DOCTYPE html>
<html>
<head>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body>
    <section class="vh-100 bg-image" style="background-image: url('https://mdbcdn.b-cdn.net/img/Photos/new-templates/search-box/img4.webp');">
        <div class="mask d-flex align-items-center h-100 gradient-custom-3">
            <div class="container h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                        <% if (typeof message !== 'undefined') { %>
                            <% if (message == 'No election running right now!') { %>
                                <div class="alert alert-danger">
                                    <%= message %>
                                </div>
                            <% } %>
                        <% } %>

                        <div class="card" style="border-radius: 15px;">
                            <h2 class="text-center mb-3"> <%= loggedInUserInfo.name %> </h2>
                            <!-- If there is no election running => disable Run for president and Presidential candidates -->
                            <% if (isRunningElection == false) { %>
                                <div class="d-flex justify-content-center">
                                    <input disabled class="btn btn-success btn-block btn-lg gradient-custom-4 text-body" value="Run for president">
                                </div>
                                <div class="d-flex justify-content-center">
                                    <input disabled type="submit" class="btn btn-success btn-block btn-lg gradient-custom-4 text-body" value="Presidential candidates">
                                </div>
                            <% } else { %>
                                <!-- Else, if there is an election running, check if the logged in user is a candidate -->
                                <% if (isCurrentCandidate == false) { %>
                                    <!-- If the logged in user is not a candidate, let him be able to candidate for presidency -->
                                    <form action="/users/president/run" method="POST">
                                        <div class="d-flex justify-content-center">
                                            <input type="submit" class="btn btn-success btn-block btn-lg gradient-custom-4 text-body" value="Run for president">
                                        </div>
                                    </form>
                                <% } else { %>
                                    <!-- Else, if he is a candidate, do not let him candidate again for the same presidency -->
                                    <div class="d-flex justify-content-center">
                                        <input disabled class="btn btn-success btn-block btn-lg gradient-custom-4 text-body" value="Run for president">
                                    </div>
                                <% } %>

                                <form action="/users/president/list" method="GET">
                                    <div class="d-flex justify-content-center">
                                        <input type="submit" class="btn btn-success btn-block btn-lg gradient-custom-4 text-body" value="Presidential candidates">
                                    </div>
                                </form>
                            <% } %>

                            <form action="/users/votes/history" method="GET">
                                <div class="d-flex justify-content-center">
                                    <input type="submit" class="btn btn-success btn-block btn-lg gradient-custom-4 text-body" value="Vote history">
                                </div>
                            </form>
                        </div>

                        <div class="bottom-buttons">
                            <button onclick="history.go(-1)">Back</button>
                            <button onclick="location.href='/'">Log out</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>