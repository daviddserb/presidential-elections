<!DOCTYPE html>
<html>
    <head>
        <link rel='stylesheet' href='/stylesheets/style.css' />
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    </head>
    <body>
        <section class="vh-100 bg-image" style="background-image: url('https://mdbcdn.b-cdn.net/img/Photos/new-templates/search-box/img4.webp');">
            <div class="mask d-flex align-items-center h-100 gradient-custom-3">
                <div class="container h-100">
                    <div class="row d-flex justify-content-center align-items-center h-100">
                        <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                            <div class="card" style="border-radius: 15px;">

                                <div class="card-body p-5">
                                    <% if (allElections.length == 0) { %>
                                        There are no running elections.
                                    <% } else { %>
                                        <% for (let i = 0; i < allElections.length; ++i) { %>
                                            <ul>
                                                <%= i + 1 %>. <%= allElections[i].start.toISOString().replace(/T/, ' ').replace(/\..+/, '') %> ~ <%= allElections[i].stop.toISOString().replace(/T/, ' ').replace(/\..+/, '') %>
                                                <% for (let j = 0, cnt = 0; j < usersNameVoted.length; ++j) { %>
                                                    <ul>
                                                        <% if (allElections[i].start < date[j] && date[j] < allElections[i].stop) { %>
                                                            <%= ++cnt %>. <%= usersNameVoted[j] %>
                                                        <% } %>
                                                    </ul>
                                                <% } %>
                                            </ul>
                                        <% } %>
                                    <% } %>
                                </div>
                            </div>
                            <% if (appRunOn == "localhost") { %>
                                <a class="btn btn-success btn-block gradient-custom-4 text-body" href="http://localhost:3000">Home page</a>
                            <% } else { %>
                                <a class="btn btn-success btn-block gradient-custom-4 text-body" href="https://presidential--elections.herokuapp.com/">Home page</a>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </body>
</html>